{
  "manifest_version": 3,
  "name": "Chrome-Vu-2.0",
  "version": "1.0.0",
  "description": "Анализирует страницу и находит контекстную информацию через ИИ и exa.ai.",
  "action": {
    "default_title": "Chrome-bot"
  },
  "background": {
    "service_worker": "background.js"
  },
  "permissions": [
    "activeTab",
    "scripting",
    "storage",
    "tabs",
    "sidePanel"
  ],
  "host_permissions": [
    "http://127.0.0.1:8010/*",
    "https://127.0.0.1:8010/*",
    "<all_urls>"
  ],
  "options_page": "options.html",
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}

